      </dependency>
       <dependency>
           <groupId>com.vmware.saas.functional.test</groupId>
           <artifactId>test-testng</artifactId>
           <version>${project.version}</version>
           <scope>test</scope>
       </dependency>
      <dependency>
         <groupId>com.vmware.saas.functional.test</groupId>
         <artifactId>test-functional-sdk</artifactId>
          <version>${project.version}</version>
          <scope>test</scope>
